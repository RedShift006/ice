{
	"apps": [{
		"name": "Ice",
		"script": "server.js",
		"env": {
			"COMMON_VARIABLE": "true"
		},
		"env_production": {
			"NODE_ENV": "production"
		}
	}],

	"deploy": {
		"production": {
			"user": "root",
			"host": "192.168.0.115",
			"ref": "origin/master",
			"repo": "https://github.com/RedShift006/ice.git",
			"path": "/home/user/www/ice/production",
			"ssh_options": "StrictHostKeyChecking=no",
			"pre-deploy-local": "echo 'Deploy Done!'",
			"env": {
				"NODE_ENV": "production"
			}
		},
		"dev": {
			"user": "root",
			"host": "192.168.0.115",
			"ref": "origin/master",
			"repo": "https://github.com/RedShift006/ice.git",
			"path": "/home/user/www/ice/production",
			"pre-deploy-local": "echo 'dev Deploy Done!'",
			"env": {
				"NODE_ENV": "dev",
				"PORT": 3012
			}
		}	
    }
}
